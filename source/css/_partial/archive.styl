.archives-wrap
  margin: block-margin 0

.archives
  clearfix()

.archive-year-wrap
  margin-bottom: 1em

.archive-year
  @extend $block-caption

.archives
  column-gap: 10px
  @media mq-tablet
    column-count: 2
  @media mq-normal
    column-count: 3

.archive-article
  avoid-column-break()

.archive-article-inner
  @extend $block
  padding: 10px
  margin-bottom: 15px
  position: relative
  &:after
    content: ""
    bottom: 0
    right: 0
    position: absolute
    border-bottom: 13px solid color-background
    border-left: 17px solid transparent

.archive-article-title
  text-decoration: none
  font-weight: bold
  color: color-default
  transition: color 0.2s
  line-height: line-height
  &:hover
    color: color-link

.archive-article-footer
  margin-top: 1em

.archive-article-date
  color: color-grey
  text-decoration: none
  font-size: 0.85em
  line-height: 1em
  margin-bottom: 0.5em
  display: block

#page-nav
  @extend $block
  clearfix()
  margin: block-margin auto
  text-align: center
  color: color-grey
  overflow: hidden
  position: relative;
  &:after
    content: ""
    bottom: 0
    right: 0
    position: absolute
    border-bottom: 25px solid color-background
    border-left: 32px solid transparent
    
  a, span
    line-height: 1
    height: 2ex;
    padding: 10px 20px
    line-height: 1
    height: 2ex
  a
    color: color-grey
    text-decoration: none
    &:hover
      background: color-grey
      color: #fff
  .prev
    padding-right: 40px
    &:before
      font-family: font-icon
      content: '\f100'
      padding-right: 8px
  .next
    padding-left: 40px
    &:after
      font-family: font-icon
      content: '\f101'
      padding-left: 8px
  .page-number
    display: inline-block
    @media mq-mobile
      display: none
  .current
    color: color-default
    font-weight: 600;
  .space
    color: color-border
